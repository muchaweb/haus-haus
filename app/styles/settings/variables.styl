/**
* ---------------------------------------------------------
* Settings.
* ----------------------------------------------------------
**/

@import url("http://fonts.googleapis.com/css?family=Roboto:400,400italic,500,500italic,700,700italic");

//* Color scheme */

// /* Red base scheme */
$color-red-0 = #EF3F36;
$color-red-1 = #FF8C86;
$color-red-2 = #FF655D;
$color-red-3 = #D01B11;
$color-red-4 = #A40B03;

// /* Blue base scheme */
$color-blue-0 = #2C3037;
$color-blue-1 = lighten($color-blue-0, 10%);
$color-blue-2 = #494F5A;
$color-blue-3 = #181D26;
$color-blue-4 = #101724;

//* Gray base scheme  */
$color-gray-0 = #8F8F8F;
$color-gray-1 = #EDECEC;
$color-gray-2 = #BABABA;
$color-gray-3 = #606060;
$color-gray-4 = #242323;

//* Typography */
$base-font-size   = 14px;
$base-font-sans   = "Roboto", sans-serif;
$base-font-serif  = Georgia, serif;
$base-font-height = $base-font-size * 1.3;

//* Colors */
$color-link       = #4183C4;
$color-link-hover = #333;
$color-text       = #333;
$color-text-light = #777;
$color-hr         = #EEE;

//* Colors social media */
$color-facebook  = #3B5998;
$color-twitter   = #2EB3E5;
$color-google    = #DD4B39;
$color-pinterest = #CB2027;

//* Positioning */
$margin-multiplier = 2;
$margin-general    = $base-font-height * $margin-multiplier;
