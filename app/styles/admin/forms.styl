.form-step
  background white
  margin-bottom 1em
  .form-step-header
    border 1px solid $color-gray-2
    border-left 1px solid transparent
  .form-step-index
    position relative
    margin -1px 0
    color: white
    text-align center
    border 1px solid $color-blue-2
    background-color $color-blue-1
    display block
    font-size $base-font-size * 1.25
    font-weight 300
    width 50px
    height 50px
    line-height 50px
  .form-step-body
    padding 1em 0
    border 1px solid $color-gray-2
    border-top none
  .control-label
    margin 0.65em 0
.map-container
  position relative
  width 100%
  height 300px
  margin-bottom $margin-general
